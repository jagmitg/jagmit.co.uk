{
  "name": "jagmit.co.uk",
  "version": "1.0.0",
  "author": "Jagmit Gabba",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/jagmitg/jagmit.co.uk.git",
    "directory": "src"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "npm run repo && astro check && tsc --noEmit && astro build",
    "build-test": "astro check && tsc --noEmit && astro build",
    "preview": "astro preview",
    "check": "astro check",
    "test": "playwright test",
    "fmt": "prettier -w --plugin-search-dir=. .",
    "fmt:check": "prettier --check .",
    "cache": "node --no-warnings=ExperimentalWarning --experimental-specifier-resolution=node --loader ts-node/esm scripts/generatecache.ts",
    "repo": "node --no-warnings=ExperimentalWarning --experimental-specifier-resolution=node --loader ts-node/esm scripts/fetchRepos.ts",
    "stackoverflow": "ts-node --esm scripts/fetchStackoverflow.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "cheerio": "^1.0.0-rc.12",
    "color": "^4.2.3",
    "dotenv": "^16.3.1",
    "emoji-js": "^3.8.0",
    "octokit": "^3.1.2",
    "prettier": "^3.1.1",
    "prettier-plugin-astro": "^0.12.2",
    "remark": "^15.0.1",
    "remark-frontmatter": "^5.0.0",
    "serve": "^14.2.1",
    "sharp": "^0.33.1",
    "strip-markdown": "^6.0.0",
    "yaml": "^2.3.4"
  },
  "dependencies": {
    "@astrojs/check": "^0.3.3",
    "@astrojs/mdx": "^2.0.1",
    "@astrojs/partytown": "^2.0.2",
    "@astrojs/rss": "^4.0.1",
    "@astrojs/sitemap": "^3.0.3",
    "@astrojs/tailwind": "^5.0.3",
    "@astrojs/ts-plugin": "^1.3.1",
    "astro": "^4.0.6",
    "gist-embed": "^1.0.4",
    "node-fetch": "^3.3.2",
    "rehype-external-links": "^3.0.0",
    "sass": "^1.69.5",
    "stylelint": "^16.0.2",
    "stylelint-config-property-sort-order-smacss": "^10.0.0",
    "stylelint-order": "^6.0.4",
    "stylelint-scss": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
