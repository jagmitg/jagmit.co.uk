{
  "name": "jagmit.co.uk",
  "version": "1.0.0",
  "author": "Jagmit Gabba",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/jagmitg/jagmit.co.uk.git",
    "directory": "src"
  },
  "scripts": {
    "dev": "astro dev",
    "build": "npm run repo && astro check && tsc --noEmit && astro build",
    "preview": "astro preview",
    "check": "astro check",
    "test": "playwright test",
    "test:update": "docker run --rm --network host -v $(pwd):/work/ -w /work/ -it mcr.microsoft.com/playwright:focal /bin/bash -c 'npm test -- -u'",
    "fmt": "prettier -w --plugin-search-dir=. .",
    "fmt:check": "prettier --check .",
    "cache": "ts-node --esm scripts/generatecache.ts",
    "repo": "NODE_TLS_REJECT_UNAUTHORIZED=0 ts-node --esm scripts/fetchRepos.ts",
    "stackoverflow": "ts-node --esm scripts/fetchStackoverflow.ts"
  },
  "devDependencies": {
    "@playwright/test": "^1.35.1",
    "cheerio": "^1.0.0-rc.12",
    "color": "^4.2.3",
    "dotenv": "^16.3.1",
    "emoji-js": "^3.7.0",
    "octokit": "^3.1.0",
    "prettier": "^3.0.2",
    "prettier-plugin-astro": "^0.11.1",
    "remark": "^14.0.3",
    "remark-frontmatter": "^4.0.1",
    "serve": "^14.2.0",
    "sharp": "^0.32.1",
    "strip-markdown": "^5.0.1",
    "yaml": "^2.3.1"
  },
  "dependencies": {
    "@astrojs/image": "^0.17.3",
    "@astrojs/mdx": "^0.19.7",
    "@astrojs/partytown": "^1.2.3",
    "@astrojs/rss": "^2.4.4",
    "@astrojs/sitemap": "^2.0.2",
    "@astrojs/tailwind": "^4.0.0",
    "@astrojs/ts-plugin": "^1.1.1",
    "algoliasearch": "^4.18.0",
    "astro": "^2.10.9",
    "gist-embed": "^1.0.4",
    "instantsearch.js": "^4.56.4",
    "node-fetch": "^3.3.2",
    "rehype-external-links": "^2.1.0",
    "sass": "^1.65.1",
    "stylelint": "^15.10.2",
    "stylelint-config-property-sort-order-smacss": "^9.1.0",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^5.1.0",
    "ts-node": "^10.9.1"
  }
}
