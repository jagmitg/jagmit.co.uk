---
import Layout from "@layouts/Layout.astro";
import MainLayout from "@layouts/MainLayout.astro";
import { getCollection } from 'astro:content';
import External from "@components/icons/External.astro";

const posts = (await getCollection("tool")).filter(post => post.data.draft !== true);

---

<Layout>
  <MainLayout title="Tools">
        <div class="grid gap-4 grid-cols-1 grid-rows-2 mt-5 lg:grid-cols-2">
      {
        posts.map((tool: any) => (
          <>
            <a
              href={tool.data.url}
              target="_blank"
              rel="noopener noreferrer"
              class="p-4 border border-neutral-200 bg-black rounded flex items-center justify-between px-3 py-4 w-full transform hover:-translate-y-2 hover:bg-neutral-200 transition relative shadow-md hover:shadow-xl"            >
              <div class="flex flex-col ">
                <p class="font-bold text-white">{tool.data.title}</p>

                <div class="text-neutral-700">
                  <External />
                </div>

              </div>

            </a>
          </>
        ))
      }
    </div>

  </MainLayout>
</Layout>
