---
import ExternalWrapper from '@components/ExternalWrapper.astro';
import Layout from '@layouts/Layout.astro'
import MainLayout from '@layouts/MainLayout.astro'
import { getCollection } from "astro:content";

const posts = (await getCollection('tool')).filter(
  (post) => post.data.draft !== true
).sort((a, b) =>
  b.data.date.valueOf() - a.data.date.valueOf()
);

---

<Layout>
	<MainLayout title="Tools">
		<div class="grid gap-4 mt-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3">
			{
				posts.map((tool: any) => (
					<a
						href={tool.data.url}
						target="_blank"
						class="group relative flex items-center justify-center p-5 border border-neutral-300 rounded-lg shadow-md transform transition-transform duration-500 ease-in-out hover:-translate-y-2 hover:scale-105 hover:shadow-xl focus:ring-2 focus:ring-offset-2 focus:ring-sky-500 h-32"
						style={{ backgroundImage: `url(${tool.data.backgroundImage})`, backgroundSize: 'cover', backgroundPosition: 'center' }}
					>
						<div class="absolute inset-0 bg-black bg-opacity-65 rounded-lg"></div>
						<div class="relative z-10 flex flex-col items-center justify-center space-y-2 text-center">
							<p class="font-semibold text-white group-hover:text-gray-200 text-lg transition-colors duration-300 ease-in-out">
								{tool.data.title}
							</p>
						</div>
            <ExternalWrapper />
					</a>
				))
			}
		</div>
	</MainLayout>
</Layout>
